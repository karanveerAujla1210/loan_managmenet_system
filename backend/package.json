{
  "name": "@loan-management/nbfc-backend",
  "version": "2.0.0",
  "description": "Production-grade NBFC Loan Management Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "seed": "node scripts/seed.js",
    "insert-production-data": "node scripts/insert-production-data.js",
    "migrate-data": "node scripts/migrate-data.js",
    "migrate-customers": "node scripts/migrate-customers.js",
    "validate-migration": "node scripts/validate-migration.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/ controllers/ middleware/ models/ routes/ services/ utils/ cron/",
    "lint:fix": "eslint src/ controllers/ middleware/ models/ routes/ services/ utils/ cron/ --fix",
    "import-data": "node scripts/importData.js",
    "update-dpd": "node cron/updateDPD.js",
    "cron:dpd": "node cron/updateDPD.js",
    "build": "npm run lint && npm test",
    "security:audit": "npm audit && npm audit --audit-level=moderate",
    "docs:generate": "swagger-jsdoc -d docs/swagger.config.js routes/*.js -o docs/api.json"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "cheerio": "^1.0.0-rc.12",
    "colors": "^1.4.0",
    "compression": "^1.8.1",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.3",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.11",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
