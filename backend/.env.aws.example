# AWS Production Environment Configuration
# Copy this to .env.production and fill in actual values

# Application
NODE_ENV=production
PORT=5000

# Database (AWS DocumentDB)
# Format: mongodb://username:password@cluster-endpoint:27017/?ssl=true&replicaSet=rs0&retryWrites=false
MONGODB_URI=mongodb://admin:PASSWORD@loan-crm-prod.cluster-XXXXX.ap-south-1.docdb.amazonaws.com:27017/?ssl=true&replicaSet=rs0&retryWrites=false

# JWT
JWT_SECRET=GENERATE_WITH_openssl_rand_-base64_32
JWT_EXPIRY=8h

# Cron Jobs
CRON_ENABLED=true

# Cache (AWS ElastiCache Redis)
# Format: redis://[password@]host:port
REDIS_URL=redis://loan-crm-redis.XXXXX.ng.0001.aps1.cache.amazonaws.com:6379

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://your-domain.com

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASS=your-app-password

# AWS Services (Optional - for S3 backups, SES, etc.)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_S3_BUCKET=loan-crm-backups

# Twilio (Optional - for SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=GENERATE_WITH_openssl_rand_-base64_32

# API Keys (if using external services)
EXTERNAL_API_KEY=your-api-key
