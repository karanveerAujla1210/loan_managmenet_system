# Environment Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nbfc_loan_management
MONGODB_TEST_URI=mongodb://localhost:27017/nbfc_loan_management_test
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_DB=1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
CSRF_SECRET=your-csrf-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW=900000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@company.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@company.com
EMAIL_FROM_NAME=NBFC Loan Management

# SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
SMS_ENABLED=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Business Configuration
DEFAULT_INTEREST_RATE=24
DEFAULT_PROCESSING_FEE_RATE=2
DEFAULT_PENALTY_RATE=36
DEFAULT_LOAN_TENURE_MONTHS=12
MIN_LOAN_AMOUNT=10000
MAX_LOAN_AMOUNT=1000000

# Collections Configuration
DPD_CALCULATION_TIME=06:00
AUTO_COLLECTION_ENABLED=true
COLLECTION_REMINDER_DAYS=3,7,15,30
LEGAL_NOTICE_DPD=90

# Credit Scoring
CREDIT_SCORE_MIN=300
CREDIT_SCORE_MAX=900
AUTO_APPROVAL_SCORE=750
MANUAL_REVIEW_SCORE=650

# External APIs
CIBIL_API_URL=https://api.cibil.com
CIBIL_API_KEY=your-cibil-api-key
BANK_STATEMENT_ANALYZER_URL=https://api.bankanalyzer.com
BANK_STATEMENT_API_KEY=your-bank-analyzer-key

# Monitoring & Health
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Development
DEBUG_MODE=false
SWAGGER_ENABLED=true
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# Production Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
MONGO_SANITIZE_ENABLED=true
XSS_CLEAN_ENABLED=true
HPP_ENABLED=true

# Cron Jobs
CRON_DPD_UPDATE=0 1 * * *
CRON_INTEREST_CALCULATION=0 2 * * *
CRON_COLLECTION_REMINDER=0 9 * * *
CRON_REPORT_GENERATION=0 6 * * 1
CRON_DATA_CLEANUP=0 3 * * 0