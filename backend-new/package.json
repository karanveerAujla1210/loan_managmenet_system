{
  "name": "@nbfc/loan-management-backend",
  "version": "2.0.0",
  "description": "Production-grade NBFC Loan Management System Backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t nbfc-backend .",
    "docker:run": "docker run -p 5000:5000 nbfc-backend",
    "docs:generate": "swagger-jsdoc -d docs/swagger.config.js src/routes/*.js -o docs/api.json",
    "security:audit": "npm audit && snyk test",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "cron:start": "node src/jobs/cronManager.js",
    "performance:test": "artillery run tests/performance/load-test.yml"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "pdf-lib": "^1.17.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "redis": "^4.6.10",
    "bull": "^4.12.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "express-fileupload": "^1.4.3",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3",
    "twilio": "^4.19.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "crypto": "^1.0.1",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "artillery": "^2.0.3",
    "snyk": "^1.1248.0",
    "@types/jest": "^29.5.8",
    "mongodb-memory-server": "^9.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
