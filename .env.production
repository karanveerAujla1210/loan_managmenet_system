# Production Environment Variables
NODE_ENV=production

# Database Configuration
MONGO_ROOT_USERNAME=loanadmin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DB_NAME=loan_management_prod
MONGO_URI=mongodb://loanadmin:your_secure_password_here@mongodb:27017/loan_management_prod?authSource=admin

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_key_minimum_32_characters
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Server Configuration
PORT=5000
CORS_ORIGIN=https://yourdomain.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_production_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_NAME=Loan Management System
FROM_EMAIL=noreply@yourdomain.com

# Security Configuration
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CLIENT_URL=https://yourdomain.com

# File Upload
MAX_FILE_UPLOAD=5000000
FILE_UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem